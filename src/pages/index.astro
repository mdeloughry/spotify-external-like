---
import Layout from "../layouts/Layout.astro";
import AuthButton from "../components/AuthButton";
import SearchApp from "../components/SearchApp";
import { getTokenFromCookies, getRefreshTokenFromCookies } from "../lib/auth";
const cookieHeader = Astro.request.headers.get("cookie");
const accessToken = getTokenFromCookies(cookieHeader);
const refreshToken = getRefreshTokenFromCookies(cookieHeader);
const isAuthenticated = !!(accessToken || refreshToken);

const error = Astro.url.searchParams.get("error");
const initialQuery = Astro.url.searchParams.get("q") || "";
const initialUrl = Astro.url.searchParams.get("url") || "";
---

<Layout
  title="Spillover – Save every track you find to your Spotify library"
  showAuthHeader={true}
  isAuthenticated={isAuthenticated}
>
  <!-- Main Content -->
  <div>
    {
      error && (
        <div class="max-w-5xl mx-auto px-4 py-4">
          <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4 text-red-400">
            <p>
              {error === "state_mismatch" &&
                "Authentication failed: state mismatch. Please try again."}
              {error === "no_code" &&
                "Authentication failed: no authorization code received."}
              {error === "token_exchange_failed" &&
                "Authentication failed: could not exchange token."}
              {error === "access_denied" &&
                "Authentication was denied. Please try again."}
              {![
                "state_mismatch",
                "no_code",
                "token_exchange_failed",
                "access_denied",
              ].includes(error) && `Authentication error: ${error}`}
            </p>
          </div>
        </div>
      )
    }

    {
      isAuthenticated ? (
        <div class="max-w-5xl mx-auto px-4 py-12">
          <div class="mb-7 flex items-end justify-between gap-4">
            <div>
              <p class="text-xs uppercase tracking-[0.26em] text-emerald-300/80">
                Session
              </p>
              <h2 class="mt-2 text-[1.6rem] sm:text-[1.8rem] font-semibold tracking-tight">
                Save what you are listening to, from anywhere
              </h2>
              <p class="mt-2 text-[0.9rem] text-spotify-lightgray/90 leading-relaxed">
                Paste a link or type a title, then send tracks straight into
                your Spotify library and playlists.
              </p>
            </div>
            <div class="hidden text-right text-xs text-spotify-lightgray sm:block">
              <p>
                Tip: Press
                <span class="mx-1 inline-flex items-center justify-center rounded border border-spotify-gray/60 bg-black/40 px-1.5 py-0.5 text-[0.7rem]">
                  /
                </span>
                to jump to search
              </p>
            </div>
          </div>
          <SearchApp client:load initialQuery={initialQuery || initialUrl} />
        </div>
      ) : (
        <div class="max-w-5xl mx-auto px-4 py-16">
          <div class="grid gap-12 lg:grid-cols-[minmax(0,1.4fr)_minmax(0,1fr)] items-center">
            <div class="max-w-full">
              <h2 class="mt-6 text-[1.9rem] sm:text-[2.3rem] md:text-[2.6rem] font-bold tracking-tight leading-snug break-words">
                Your music lives all-over.
                <span class="block bg-gradient-to-r from-emerald-300 via-emerald-200 to-sky-300 bg-clip-text text-transparent">
                  Your library shouldn't.
                </span>
                <span class="block bg-gradient-to-r from-emerald-300 via-emerald-200 to-sky-300 bg-clip-text text-transparent">
                  Keep everything together.
                </span>
              </h2>
              <p class="mt-4 text-[0.95rem] sm:text-[1.05rem] text-spotify-lightgray/95 max-w-xl leading-relaxed break-words">
                You discover tracks on YouTube, radio, mixes and random links.
                Spillover is the quiet little bridge that makes sure they end up
                in your Spotify library.
              </p>

              <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:flex-wrap sm:items-center">
                <div class="shrink-0">
                  <AuthButton client:load isAuthenticated={false} />
                </div>
                <p class="text-xs text-spotify-lightgray max-w-xs sm:ml-1">
                  No extra account. Just Spotify.
                </p>
              </div>

              <div class="mt-4">
                <a
                  href="/about"
                  class="inline-flex items-center gap-2 text-sm text-spotify-lightgray hover:text-white transition-colors group"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Learn how it works
                  <svg class="w-3 h-3 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>

              <dl class="mt-10 grid gap-6 text-sm sm:grid-cols-2">
                <div class="rounded-2xl border border-white/5 bg-white/[0.02] p-5 shadow-[0_18px_60px_rgba(0,0,0,0.6)]">
                  <dt class="flex items-center gap-2 text-xs font-medium uppercase tracking-[0.2em] text-spotify-lightgray">
                    <span class="h-1 w-6 rounded-full bg-emerald-400" />
                    Quick capture
                  </dt>
                  <dd class="mt-3 text-sm text-spotify-white">
                    Search by title, or paste a YouTube, SoundCloud, Spotify or other music link.
                    Spillover turns it into something you can save.
                  </dd>
                </div>

                <div class="rounded-2xl border border-white/5 bg-white/[0.02] p-5 shadow-[0_18px_60px_rgba(0,0,0,0.6)]">
                  <dt class="flex items-center gap-2 text-xs font-medium uppercase tracking-[0.2em] text-spotify-lightgray">
                    <span class="h-1 w-6 rounded-full bg-sky-400" />
                    Lives with your listening
                  </dt>
                  <dd class="mt-3 text-sm text-spotify-white">
                    Use it as a small window next to whatever you are listening
                    to. Like tracks, drop them into playlists, move on.
                  </dd>
                </div>
              </dl>
            </div>

            <div class="relative">
              <div class="pointer-events-none absolute -inset-12 -z-10 bg-[radial-gradient(circle_at_top,_rgba(74,222,128,0.22),_transparent_55%),radial-gradient(circle_at_bottom,_rgba(56,189,248,0.18),_transparent_55%)] opacity-80" />
              <div class="relative space-y-4">
                <!-- External player mock (e.g. YouTube tab) -->
                <div class="rounded-3xl border border-white/10 bg-black/70 px-5 py-4 shadow-[0_26px_80px_rgba(0,0,0,0.9)] backdrop-blur-xl">
                  <div class="mb-2 flex items-center justify-between gap-3 text-[0.7rem] text-spotify-lightgray/90">
                    <div class="flex items-center gap-2 truncate">
                      <span class="truncate text-red-500 font-bold">YouTube · Boiler Room</span>
                    </div>
                  </div>
                  <div class="flex items-center justify-between gap-3">
                    <div class="flex items-center gap-3 min-w-0">
                      <img
                        src="https://i.ytimg.com/vi/5qap5aO4i9A/hqdefault.jpg"
                        alt="Boiler Room set thumbnail"
                        class="h-10 w-10 flex-shrink-0 rounded-lg object-cover ring-1 ring-white/10"
                      />
                      <div class="min-w-0">
                        <p class="text-xs uppercase tracking-[0.22em] text-spotify-lightgray">
                          Listening elsewhere
                        </p>
                        <p class="mt-1 truncate text-sm font-medium">
                          Boiler Room · London (full set)
                        </p>
                        <p class="truncate text-xs text-spotify-lightgray">
                          Streamed on YouTube · Not saved to Spotify yet
                        </p>
                      </div>
                    </div>
                    <div class="flex flex-col items-end gap-1">
                      <div class="flex h-9 w-9 items-center justify-center rounded-full bg-red-500/20 text-red-400">
                        <svg
                          class="h-4 w-4"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                        >
                          <path d="M10 9v6l5-3-5-3z" />
                        </svg>
                      </div>
                      <span class="text-xs uppercase tracking-[0.16em] text-spotify-lightgray">
                        Live now
                      </span>
                    </div>
                  </div>
                </div>

                <div class="space-y-3 pl-4 sm:pl-6">
                  <div class="group relative flex items-center gap-4 rounded-2xl border border-white/5 bg-white/[0.02] px-4 py-3 shadow-[0_22px_60px_rgba(0,0,0,0.85)] hover:border-emerald-400/40 hover:bg-white/[0.04] transition-all">
                    <div class="flex-shrink-0 relative">
                      <div class="w-12 h-12 rounded-xl bg-[conic-gradient(from_160deg,_#22c55e,_#22d3ee,_#a855f7,_#22c55e)] ring-1 ring-white/10 flex items-center justify-center">
                        <svg
                          class="h-4 w-4 text-black/80"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                        >
                          <path d="M9 18V5l9-2v13.2A3.8 3.8 0 0 1 14.2 20 3.8 3.8 0 0 1 10.4 18.3 3.3 3.3 0 0 1 9 18Z" />
                        </svg>
                      </div>
                      <div class="pointer-events-none absolute inset-0 rounded-xl bg-black/55 opacity-0 group-hover:opacity-100 transition-opacity">
                        <div class="flex h-full w-full items-center justify-center">
                          <svg
                            class="h-5 w-5 text-white"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                          >
                            <path d="M8 5v14l11-7z" />
                          </svg>
                        </div>
                      </div>
                    </div>

                    <div class="min-w-0 flex-1">
                      <p class="text-xs uppercase tracking-[0.2em] text-spotify-lightgray">
                        Found On Spotify
                      </p>
                      <p class="mt-1 truncate text-sm font-medium text-white">
                        London 23/04/2025 (full set)
                      </p>
                      <p class="truncate text-xs text-spotify-lightgray">
                        Boilter Room
                      </p>
                    </div>

                    <div class="ml-3 flex flex-col items-end gap-2">
                      <div class="flex flex-wrap justify-end gap-1">
                        <span class="inline-flex items-center gap-1 rounded-full border border-white/15 px-2 py-0.5 text-xs uppercase tracking-[0.16em] text-spotify-lightgray">
                          <span class="h-1.5 w-1.5 rounded-full bg-emerald-300" />
                          Liked
                        </span>
                      </div>
                    </div>
                  </div>

                  <a
                    href="/extension"
                    class="group relative inline-flex items-center gap-3 rounded-2xl border border-dashed border-emerald-300/40 bg-black/30 px-4 py-3 text-xs text-spotify-lightgray backdrop-blur-xl"
                  >
                    <span class="flex h-7 w-7 items-center justify-center rounded-full bg-emerald-300/10 text-emerald-200">
                      <svg
                        class="h-3 w-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
                        />
                      </svg>
                    </span>
                    <span class="flex-1">
                      Right–click any text in Chrome and “Send to Spillover” to
                      pre‑fill the search.
                    </span>
                    <span class="inline-flex items-center gap-1 text-[0.7rem] text-emerald-200 group-hover:translate-x-0.5 transition-transform">
                      Install extension
                      <svg
                        class="h-3 w-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    }
  </div>
</Layout>
