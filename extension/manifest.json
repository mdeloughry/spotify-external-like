{
  "manifest_version": 3,
  "name": "Spillover",
  "version": "1.1.0",
  "description": "Search, import playlists, and save music to your Spotify library with Spillover",
  "permissions": ["contextMenus", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Spillover popup"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["content-spotify-blocker.js"],
      "run_at": "document_start"
    }
  ]
}
